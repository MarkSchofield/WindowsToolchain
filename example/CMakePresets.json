{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "+spectre",
      "hidden": true,
      "cacheVariables": {
        "VS_USE_SPECTRE_MITIGATION_ATLMFC_RUNTIME": "ON",
        "VS_USE_SPECTRE_MITIGATION_RUNTIME": "ON"
      }
    },
    {
      "name": "default",
      "binaryDir": "${sourceDir}/__output/${presetName}",
      "hidden": true
    },
    {
      "name": "windows",
      "inherits": ["default"],
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" },
      "hidden": true
    },
    {
      "name": "windows-fastbuild",
      "inherits": ["windows"],
      "hidden": true,
      "generator": "FASTBuild",
      "cacheVariables": {
        "CMAKE_VS_VERSION_PRERELEASE": "ON",
        "CMAKE_VS_VERSION_RANGE": "[16.0,19.0)",
        "CMAKE_VS_WINDOWS_TARGET_PLATFORM_VERSION_MAXIMUM": "10.0.26100.0"
      }
    },
    {
      "name": "windows-fastbuild-msvc",
      "inherits": "windows-fastbuild",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "../Windows.MSVC.toolchain.cmake"
      }
    },
    {
      "name": "windows-fastbuild-msvc-x64",
      "inherits": "windows-fastbuild-msvc",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "windows-ninja",
      "inherits": ["windows"],
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_VS_VERSION_PRERELEASE": "ON",
        "CMAKE_VS_VERSION_RANGE": "[16.0,19.0)",
        "CMAKE_VS_WINDOWS_TARGET_PLATFORM_VERSION_MAXIMUM": "10.0.26100.0"
      }
    },
    {
      "name": "windows-ninja-msvc",
      "inherits": "windows-ninja",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "../Windows.MSVC.toolchain.cmake"
      }
    },
    {
      "name": "windows-ninja-clang",
      "inherits": ["windows-ninja"],
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "../Windows.Clang.toolchain.cmake"
      }
    },
    {
      "name": "windows-ninja-clangcl",
      "inherits": "windows-ninja",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER_FRONTEND_VARIANT": "MSVC",
        "CMAKE_CXX_COMPILER_FRONTEND_VARIANT": "MSVC",
        "CMAKE_TOOLCHAIN_FILE": "../Windows.Clang.toolchain.cmake"
      }
    },
    {
      "name": "windows-ninja-msvc-x64",
      "inherits": "windows-ninja-msvc",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "windows-ninja-msvc-x64-spectre",
      "inherits": ["windows-ninja-msvc", "+spectre"]
    },
    {
      "name": "windows-ninja-msvc-x86",
      "inherits": "windows-ninja-msvc",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "X86"
      }
    },
    {
      "name": "windows-ninja-msvc-arm64",
      "inherits": "windows-ninja-msvc",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "ARM64"
      }
    },
    {
      "name": "windows-ninja-msvc-host",
      "inherits": "windows-ninja-msvc"
    },
    {
      "name": "windows-ninja-clang-x64",
      "inherits": "windows-ninja-clang",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "AMD64",
        "CLANG_TIDY_CHECKS": "bugprone*,-bugprone-easily-swappable-parameters"
      }
    },
    {
      "name": "windows-ninja-clangcl-x64",
      "inherits": "windows-ninja-clangcl",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "ewdk",
      "displayName": "EWDK configuration",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/__output/${presetName}-$env{VSCMD_ARG_TGT_ARCH}",
      "condition": { "lhs": "$env{VSCMD_ARG_TGT_ARCH}", "type": "notEquals", "rhs": "" },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "../Windows.EWDK.toolchain.cmake"
      }
    },
    {
      "name": "windows-vs2022",
      "inherits": "windows",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows"
      }
    },
    {
      "name": "windows-vs2022-x64",
      "inherits": "windows-vs2022",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "x64,version=10.0.26100.0",
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "windows-vs2022-arm64",
      "inherits": "windows-vs2022",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "ARM64,version=10.0.26100.0",
        "CMAKE_SYSTEM_PROCESSOR": "ARM64"
      }
    },
    {
      "name": "windows-vs2026",
      "inherits": "windows",
      "hidden": true,
      "generator": "Visual Studio 18 2026",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows"
      }
    },
    {
      "name": "windows-vs2026-x64",
      "inherits": "windows-vs2026",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "x64,version=10.0.26100.0",
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "windows-vs2026-arm64",
      "inherits": "windows-vs2026",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "ARM64,version=10.0.26100.0",
        "CMAKE_SYSTEM_PROCESSOR": "ARM64"
      }
    },
    {
      "name": "linux-windows",
      "inherits": ["default"],
      "description": "Cross-compiling to Windows from Linux",
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" },
      "hidden": true,
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows"
      }
    },
    {
      "name": "linux-windows-ninja-clang",
      "inherits": ["linux-windows"],
      "generator": "Ninja Multi-Config",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "../Windows.Clang.toolchain.cmake",
        "CMAKE_C_COMPILER": "clang-20",
        "CMAKE_CXX_COMPILER": "clang++-20",
        "CMAKE_LINKER_TYPE": "lld",
        "CMAKE_MT": "llvm-mt-20",
        "CMAKE_RC_COMPILER": "llvm-rc-20",
        "CMAKE_C_USING_LINKER_lld": "-fuse-ld=lld",
        "CMAKE_CXX_USING_LINKER_lld": "-fuse-ld=lld"
      }
    },
    {
      "name": "linux-windows-ninja-clang-arm64",
      "inherits": ["linux-windows-ninja-clang"],
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "aarch64"
      }
    },
    {
      "name": "linux-windows-ninja-clang-x64",
      "inherits": ["linux-windows-ninja-clang"],
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "x86_64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-ninja-msvc-x64",
      "configurePreset": "windows-ninja-msvc-x64"
    },
    {
      "name": "windows-ninja-msvc-x64-spectre",
      "configurePreset": "windows-ninja-msvc-x64-spectre"
    },
    {
      "name": "windows-ninja-msvc-x86",
      "configurePreset": "windows-ninja-msvc-x86"
    },
    {
      "name": "windows-ninja-msvc-arm64",
      "configurePreset": "windows-ninja-msvc-arm64"
    },
    {
      "name": "windows-ninja-msvc-host",
      "configurePreset": "windows-ninja-msvc-host"
    },
    {
      "name": "windows-ninja-clang-x64",
      "configurePreset": "windows-ninja-clang-x64"
    },
    {
      "name": "windows-ninja-clangcl-x64",
      "configurePreset": "windows-ninja-clangcl-x64"
    },
    {
      "name": "windows-fastbuild-msvc-x64",
      "configurePreset": "windows-fastbuild-msvc-x64"
    },
    {
      "name": "ewdk",
      "configurePreset": "ewdk"
    },
    {
      "name": "windows-vs2022-x64",
      "configurePreset": "windows-vs2022-x64"
    },
    {
      "name": "windows-vs2022-arm64",
      "configurePreset": "windows-vs2022-arm64"
    },
    {
      "name": "windows-vs2026-x64",
      "configurePreset": "windows-vs2026-x64"
    },
    {
      "name": "windows-vs2026-arm64",
      "configurePreset": "windows-vs2026-arm64"
    },
    {
      "name": "linux-windows-ninja-clang-arm64",
      "configurePreset": "linux-windows-ninja-clang-arm64"
    },
    {
      "name": "linux-windows-ninja-clang-x64",
      "configurePreset": "linux-windows-ninja-clang-x64"
    }
  ]
}
